{
    "openapi": "3.0.0",
    "info": {
      "title": "Nearby Village Service",
      "version": "1.0.0",
      "description": "API untuk mencari desa terdekat dari koordinat tertentu"
    },
    "paths": {
      "/nearby-villages": {
        "get": {
          "summary": "Mencari desa terdekat berdasarkan koordinat",
          "parameters": [
            {
              "name": "latitude",
              "in": "query",
              "required": true,
              "schema": {
                "type": "number"
              }
            },
            {
              "name": "longitude",
              "in": "query",
              "required": true,
              "schema": {
                "type": "number"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Daftar desa terdekat",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/Village"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "components": {
      "schemas": {
        "Village": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            },
            "province": {
              "type": "string"
            },
            "district": {
              "type": "string"
            },
            "sub_district": {
              "type": "string"
            },
            "village": {
              "type": "string"
            },
            "border": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string"
                },
                "coordinates": {
                  "type": "array",
                  "items": {
                    "type": "array",
                    "items": {
                      "type": "array",
                      "items": {
                        "type": "number"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
  